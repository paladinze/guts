{
  "name": "toy-web-component",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/toy/web-component/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/toy/web-component"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "toy-web-component:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "toy-web-component:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "toy-web-component:build:production",
          "hmr": false
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/apps/toy/web-component"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../../coverage/apps/toy/web-component"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/toy/web-component/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": []
}
